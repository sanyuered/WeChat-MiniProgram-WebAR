<view class="page">
    <view>
      <camera 
        device-position="{{devicePosition}}" 
        flash="off" 
        frame-size="small"
        binderror="error">
       <canvas
          id="canvasWebGL"
          class="canvasWebGL"
          type="webgl"
          disable-scroll="true">
        </canvas> 
      </camera>
      <button type="default" bindtap="changeDirection" class="marginTop10">change camera direction</button>
    </view>
    <view class="page__bd page__bd_spacing">
    </view>
    <view class="marginTop10">Pattern Image:</view>
    <image id="patternImage" 
    src="{{patternImageUrl}}"></image>
</view>